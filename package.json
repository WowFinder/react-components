{
    "name": "@wowfinder/react-components",
    "type": "commonjs",
    "version": "0.0.6",
    "description": "React component library for the WowFinder apps",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/WowFinder/react-components.git"
    },
    "author": "Edurne Pascual <herenvardo@gmail.com>",
    "license": " GPL-3.0-or-later",
    "scripts": {
        "lint": "eslint . --ext js,ts,jsx,tsx",
        "lint:fix": "eslint . --ext js,ts,jsx,tsx --fix",
        "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,json5}\"",
        "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,json5}\"",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:storybook": "test-storybook",
        "test:watch": "vitest watch",
        "skott:web": "skott -nit --displayMode=webapp --trackThirdPartyDependencies --trackBuiltinDependencies src/",
        "skott:circular": "skott -nit --showCircularDependencies --displayMode=raw",
        "checks:quick": "npm-run-all -pc lint build:tsc",
        "checks:fix": "npm-run-all -sc lint:fix format build:tsc",
        "checks:standard": "npm-run-all -sc lint format:check build:tsc test skott:circular",
        "checks:full": "npm-run-all -sc lint:fix format test:coverage build skott:circular",
        "checks:pedantic": "npm-run-all -sc lint format:check test:coverage build skott:circular",
        "build:pre": "rimraf dist",
        "build:tsc": "tsc",
        "build:clean-tests": "find ./dist -name '__tests__' | xargs rm -rf",
        "build:setup": "node dist/.setup.js",
        "build:pack": "cd dist && yarn pack && mv package.tgz ../package.tgz",
        "build": "npm-run-all -s build:pre build:tsc build:clean-tests build:setup build:pack",
        "prepublishOnly": "yarn version apply && yarn run checks:pedantic && yarn build",
        "prepare": "yarn build",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "dependencies": {
        "@wowfinder/asset-schemas": "^0.0.15",
        "@wowfinder/model": "^0.0.13",
        "@wowfinder/translations": "^0.0.5",
        "@wowfinder/ts-enums": "^0.0.16",
        "@wowfinder/ts-utils": "^0.1.8",
        "globals": "^16.0.0",
        "i18next": "^24.2.3",
        "i18next-browser-languagedetector": "^8.0.4",
        "i18next-http-backend": "^3.0.2",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-i18next": "^15.4.1",
        "styled-components": "^6.1.17"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.8",
        "@playwright/test": "^1.51.1",
        "@storybook/addon-essentials": "^8.6.12",
        "@storybook/addon-interactions": "^8.6.12",
        "@storybook/addon-links": "^8.6.12",
        "@storybook/addon-onboarding": "^8.6.12",
        "@storybook/blocks": "^8.6.12",
        "@storybook/react": "^8.6.12",
        "@storybook/react-vite": "^8.6.12",
        "@storybook/test": "^8.6.12",
        "@storybook/test-runner": "^0.22.0",
        "@stylistic/eslint-plugin-js": "^4.2.0",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/react": "^16.3.0",
        "@tsconfig/recommended": "^1.0.8",
        "@types/jest": "^29.5.14",
        "@types/react": "^19.1.0",
        "@types/react-dom": "^19.1.1",
        "@types/styled-components": "^5.1.34",
        "@typescript-eslint/eslint-plugin": "^8.29.0",
        "@typescript-eslint/parser": "^8.29.0",
        "@typescript-eslint/utils": "^8.29.0",
        "@vitest/coverage-v8": "^3.1.1",
        "c8": "^10.1.3",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-deprecation": "^3.0.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-istanbul": "^0.1.2",
        "eslint-plugin-misc": "^3.3.1",
        "eslint-plugin-n": "^17.17.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.2.6",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-storybook": "^0.12.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "rxjs": "^7.8.2",
        "skott": "^0.35.4",
        "storybook": "^8.6.12",
        "storybook-react-i18next": "^3.2.1",
        "ts-jest": "^29.3.1",
        "tsd": "^0.31.2",
        "typescript": "^5.8.2",
        "vite": "^6.2.5",
        "vitest": "^3.1.1"
    },
    "packageManager": "yarn@4.8.1"
}
