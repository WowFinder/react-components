{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "target": "ES2021",
        "allowJs": true,
        "declaration": true,
        "jsx": "react-jsx",
        "module": "commonjs",
        "lib": [
            "dom",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2019",
            "ES2020",
            "ES2021",
            "ES2022",
            "ES2023",
            "ESNext"
        ],
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["**/__tests__"]
}
